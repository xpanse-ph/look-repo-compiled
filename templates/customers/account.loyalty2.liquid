/* Base for label styling */
input.loyalty[type="checkbox"]:not(:checked),
input.loyalty[type="checkbox"]:checked {
  position: absolute;
  left: -9999px;
}
input.loyalty[type="checkbox"]:not(:checked) + label,
input.loyalty[type="checkbox"]:checked + label {
  position: relative;
  padding-left: 1em;
  cursor: pointer;
}

/* checkbox aspect */
input.loyalty[type="checkbox"]:not(:checked) + label:before,
input.loyalty[type="checkbox"]:checked + label:before {
  content: '';
  position: absolute;
  left: 0; top: 0;
  width: 1.25em; height: 1.25em;
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 0;
  box-shadow: inset 0 1px 3px rgba(0,0,0,.1);
}
/* checked mark aspect */
input.loyalty[type="checkbox"]:not(:checked) + label:after,
input.loyalty[type="checkbox"]:checked + label:after {
  content: '\2713\0020';
  position: absolute;
  top: 0.35em; 
  left: .22em;
  font-size: 1em;
  line-height: 0.8;
  color: #09ad7e;
  transition: all .2s;
  font-family: 'Lucida Sans Unicode', 'Arial Unicode MS', Arial;
}
/* checked mark aspect changes */
input.loyalty[type="checkbox"]:not(:checked) + label:after {
  opacity: 0;
  transform: scale(0);
}
input.loyalty[type="checkbox"]:checked + label:after {
  opacity: 1;
  transform: scale(1);
}
/* disabled checkbox */
input.loyalty[type="checkbox"]:disabled:not(:checked) + label:before,
input.loyalty[type="checkbox"]:disabled:checked + label:before {
  box-shadow: none;
  border-color: #bbb;
  background-color: #fff;
}
input.loyalty[type="checkbox"]:disabled:checked + label:after {
  color: #000;
}
input.loyalty[type="checkbox"]:disabled + label {
  color: #aaa;
}
/* accessibility */
input.loyalty[type="checkbox"]:checked:focus + label:before,
input.loyalty[type="checkbox"]:not(:checked):focus + label:before {
  border: 2px dotted blue;
}

