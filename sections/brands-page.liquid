          deskAlphaTrigger = deskAlphaFilter.querySelectorAll('.alpha-triggers'),
          alphaGroup = document.querySelectorAll('.alpha-group')

    console.log(deskAlphaTrigger)      

    function filterBrands(filterVal){
        //loop through the alphabet groups and hide all besides the filterValue
        alphaGroup.forEach(group => {
            group.classList.add('hidden')

        if(filterVal == 'select-all') group.classList.remove('hidden');

        if(group.classList.contains(filterVal)){
                group.classList.remove('hidden')
        }
        });
    }
    
    function desktopFilter(e){
        let filterValue = this.dataset.filter
        // remove all active on click
        deskAlphaTrigger.forEach(triggers => {
            triggers.classList.remove('active')
        });
        //add active to the clicked trigger
        this.classList.add('active')

        mobAlphaFilter.querySelector('select').value = filterValue
        filterBrands(filterValue)

    }
    console.log(mobAlphaFilter)

    deskAlphaTrigger.forEach(trigger => {
        trigger.addEventListener('click', desktopFilter)
    });

    mobAlphaFilter.addEventListener('click', function(e){
        e.preventDefault();
        console.log('test')
        deskAlphaFilter.classList.toggle('prodmxmd:max-h-1000px')
    })

</script>


